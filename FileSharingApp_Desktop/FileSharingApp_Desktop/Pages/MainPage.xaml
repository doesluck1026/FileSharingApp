<Page x:Class="FileSharingApp_Desktop.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileSharingApp_Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Loaded="Page_Loaded"
      >

    <Grid Background="#353536" Margin="5,5,5,5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>         
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Device Name: " Grid.Column="0" FontSize="25" HorizontalAlignment="Left" 
                   VerticalAlignment="center" Foreground="White"/>
            <TextBox x:Name="txt_DeviceName" Text="bişeyler" Grid.Column="1" FontSize="25" 
                     HorizontalAlignment="Left" VerticalAlignment="center" Foreground="White" IsReadOnly="True" Background="Transparent"/>
            <Label Content="Device IP: " Grid.Column="2" FontSize="25" HorizontalAlignment="Left" 
                   VerticalAlignment="center" Foreground="White"/>
            <Label x:Name="txt_DeviceIP" Content="192.168.1.25" Grid.Column="3" FontSize="25"
                   HorizontalAlignment="Left" VerticalAlignment="center" Foreground="White" 
                   Background="Transparent"/>
        </Grid> <!--info Bar-->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="1" BorderThickness="3" BorderBrush="AliceBlue" CornerRadius="10">
                <Grid AllowDrop="True" Drop="Grid_Drop">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label x:Name="lbl_DragDrop" Grid.Row="0" Content="+" HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="150" Foreground="White" Margin="0,-40,0,0"/>
                    <Label Content="Drag Your Files Here" Grid.Row="1" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
                </Grid>
            </Border>
        </Grid>
        <Button x:Name="Btn_SelectFiles" Content="Select Files" Grid.Row="2" HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Click="Btn_SelectFiles_Click" FontSize="40"
                    Foreground="White" Background="AliceBlue"/>

        
    </Grid>
</Page>
